    <div class="top_chat">
      <div class="chat_title">
        hogefuga
      </div>
      <a class="chat_finish" href="">チャットを終了する</a>
    </div>
    <div class="center_chat">
      <%= render partial: 'message',collection: @messages %>
    </div>
    <%= form_with model: [@room, @message], class: 'bottom_chat',local: true do |f| %>
      <div class="message_form">
        <%= f.text_field :content, class: 'text_form', placeholder: 'type a message' %>
        <label class="form_image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit '送信', class: 'send' %>
    <% end %>